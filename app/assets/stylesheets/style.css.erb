@import url(http://fonts.googleapis.com/css?family=Rokkitt:700,400);
@import url(http://fonts.googleapis.com/css?family=Waiting+for+the+Sunrise);

@font-face {
    font-family: 'LeagueGothicRegular';
    src: url(<%= asset_path 'type/League_Gothic-webfont.eot'%>);
    src: url(<%= asset_path 'type/League_Gothic-webfont.eot?#iefix'%>) format('embedded-opentype'),
         url(<%= asset_path 'type/League_Gothic-webfont.woff'%>) format('woff'),
         url(<%= asset_path 'type/League_Gothic-webfont.ttf'%>) format('truetype'),
         url(<%= asset_path 'type/League_Gothic-webfont.svg#LeagueGothicRegular'%>) format('svg');
    font-weight: normal;
    font-style: normal;
}


/********* Structure *********/
html {
	background-image: url(<%= asset_path 'body-bg.gif'%>);
	padding:0;
}

body {
	background-image: url(<%= asset_path 'bunting.png'%>);
	background-position:top;
	background-repeat:repeat-x; 
	background-attachment:fixed;
	padding-top:3%;
	margin:0;
}

#container {
	width:90%;
	max-width:960px;
	clear:both;
	margin:0 auto;
}


#page {
	margin: 5% auto;
	padding-top:1%;
	background:white;
	width:98%;
	height:auto;
	-webkit-box-shadow:  10px -5px 0px 5px #99C337;
    box-shadow:  10px -5px 0px 5px #99C337;

}Â 

.clearfix:after {
	content: ".";
	display: block;
	clear: both;
	visibility: hidden;
	line-height: 0;
	height: 0;
}
 
.clearfix {
	display: inline-block;
}

#ballot-box {
	max-width:100%;
	position:absolute;
	margin-top: -54px;
	left:12%;
}
 
/********* Fonts *********/

html, body, h1, h2, h3, h4 {
	font-family: 'LeagueGothicRegular', sans-serif;
	text-align:center;
}

p, div {
	font-family: 'Rokkitt', serif;
	color:#99C337;
}

h1 {
	font-size:2em;
}

h2 {
	text-transform:uppercase;
	font-size:1.8em;
}
.sectionheading {
	text-transform:uppercase;
	text-align:center;
	font-size:2.75em;
	color: #D37A3C;
	padding:10px 0 10px 0;
	border-top:1px solid #99C337;
	border-bottom:1px solid #99C337;
}

.stars {
	font-size:.5em;
	vertical-align:middle;
	margin:0 10px;
}

.cancel {
	color: #D37A3C;
	cursor: pointer;
}
.cancel:hover {
	font-weight: bold;
}

/********* Header *********/

#header {
	text-align:right;
	margin-top:2%;
	margin-right:1.0416667%;
}

#logo {
	max-width:90%;
	float:right;
}

#tagline {
	width:20.8333333%;
	margin-right:2.0833333%;
	float:right;
	clear:left;
}

/********* Main ***********/

#main {
	width:75%;
	margin-top:5%;
	margin-left: 16.6666667%;
	padding-bottom:100px;
	height:auto;
	border-left:1px dashed #494949;
}

/******** Instructions *******/

#instructions-box {
	background-image: url(<%= asset_path 'instructions-arrow.gif'%>); 
	background-position: 100% 10%;
	background-repeat:no-repeat;
	width: 14.5833333%;
	max-width:140px;
	position:fixed;
	left:auto;
	top:200px;
	margin-left:10px;
}
#instructions-box.top {
	top: 250px;
	position: absolute;
}
#instructions {
	width:90%;
	background-color:#636363;
	color:white;
	padding:0px;
	height:auto;
	float:left;
	text-align:left;
	font-size:.8em;
}

#instructions l {
	list-style-type:none;
}

#instructions a, a:link, a:visited {
	color:white;
	text-decoration:none;
	display:block;
	max-width:140px;
	padding:3px 3px 3px 20px;
}

#instructions a:hover {
	display:block;
	background-color:white;
	color:#636363;
}



/******** Ballot Sections *******/

.ballot-section {
	width: 91.6666667%;
	margin: 0 auto 30px;
}

/******** Pointer *********/

.pointer {
	width:33.3333333%; /* 20px / 660px */
	height:40px;
	float:left;
	float:left;
	color:white;
	text-align:right;
	text-transform:uppercase;
}	

.pointer-image {
	max-width:100%;
	max-height:40px;
	position:relative;
	z-index:0;
}

.pointer-text {
	display:block;
	height:40px;
	position:relative;
	padding: 5% 15% 0 0;
	top:-40px;
	z-index:99;
}


/********* Forms ************/

input, textarea, select {
	border-top: none;
	border-left:none;
	border-right:none;
	border-bottom:1px dotted #99C337;
	width:55%;
	font-family:'Waiting for the sunrise', 'Rokkit', serif;
	color:#99C337;
	font-size:1.4em;
}

input:focus, textarea:focus, select:focus {
	outline:none;
	border-bottom:1px dotted #99C337;
}	

button {
	background-color:#99C337;
	outline:none;
	border:none;
	font-family:"Rokkitt", serif;
	text-transform:uppercase;
	font-size:1.7em;
	color:white;
	width:85%;
	
}
	
/******* Find Ballot **********/
#find-ballot {
	height:auto;
}

#enter-address {
	margin: 30px 0 50px
}

#address-input {
	margin: 0 3.030303%;
}

#address-tooltip {
	width: 55%;
	float: right;
	margin: 0 6.030303%;
}


#map-embed {
	margin-left:10%;
}

#map-embed img {
	width:60%;
	margin-left: 3.030303%;
	border:1px solid #99C337;
}	

#address-submit {
	margin-left: 36.36363636%;
	margin-top:5%;
}

/********** Read Ballot ********/

.ballot-category {
	width: 100%;
	height:auto;
	margin-bottom:5%;
	border:1px solid #B3B3B3;
}

.category-heading {
	margin:-2.5% auto;
	background:white;
	width:30%;
	padding:1%;
}

.race-menu {
	width: 24.2424242%; /* 160px / 660px */
	float:right;
	margin:2.5% 3.030303%;
}

.race-menu ul {list-style-type:none}

.race-menu li {
	display:block;
	background-color: #C2DC84;
	text-align:center;
	margin-bottom:10%;
	color:white;
	font-size:1.5em;
	padding:4%;
}

	/******** Generic Choice ********/
	.row {
		color:white;
		width: 59%;
		float:left;
		margin: 2.5% 3.030303%;
		padding: 2%;
	}
	.explanation {
		width:90%;
		padding:3%;
		color:white;
		margin: 0 0 10px;
	}
	.option {
		width:45%;
		margin-right:5%;
		float:left;
	}
	.option img {
		float:left;
		margin: 0 4% 4% 0;
		max-width: 36.6666667%;
	}
	.option div.blurb {
		color:white;
		text-align:left;
		margin: 0 0 10px;
		}

	.option h1 {
		font-family:'Rokkitt', serif;
		color:white;
		font-size:1.2em;
		line-height: 1.4em;
		float:none;
		width:auto;
		text-align: left;
		font-weight: bold;
		}
	
	.comment, .comment:focus {
		width: 100%;
		font-size:1em;
		border:none;
		color: gray;
		padding:0 5px;
		resize: none;
		border: none;
		box-sizing: border-box;
		-moz-box-sizing: border-box;
	}
	.comment:disabled {
		height: 26px;
	}
	.yourFeedback {
		border: 2px solid #999;
		background: #efefef;
		text-align: right;
		margin: -2px 0 0;
	}
	.yourFeedback button {
		font-size: 14px;
		cursor: pointer;
		width: 40%;
		margin: 0 4px 4px 0;
		background: #D37A3C;
	}
	.yourFeedback button:hover {
		opacity: 0.6;
	}
	

	.link {
		cursor: pointer;
		font-size: 90%;
	}
	.link:hover {
		text-decoration: underline;
	}

	.race-menu ul li {
		cursor: pointer;
		opacity: 0.5;
	}
	.race-menu ul li:hover {
		opacity: 0.2;
	}
	.race-menu ul li.selected, .race-menu ul li.selected:hover { opacity: 1 }
	
	/******** Candidates ********/
	.candidates .row { background-color:#C2DC84; }
	.candidates .row .explanation { background-color: #99C337 }

	.candidate-info {
		float:right;
		color:gray;
		max-width:64%;
	}
	.candidates .link {color: #99C337 }

	/******** Ballot Measures ********/
	.ballot-measures { color:#D37A3C }
	.ballot-measures .row { background-color:#e4bc9e }
	.ballot-measures li { background-color:#e4bc9e }
	.ballot-measures .row .explanation { background-color: #D37A3C }
	.ballot-measures .link { color: #D37A3C  }
	.ballot-measures p, .ballot-measures div { color: #fff; }
	.ballot-measures ul.feedback li { margin: 10px 0; text-align: left; background: #efefef;  }
	.ballot-measures ul.feedback li a { color: #333; display: inline-block; padding-left: 0; }
	.ballot-measures ul.feedback li:even { background-color: #D37A3C; }
	.ballot-measures ul.feedback li img { width: 30px; }
	.ballot-measures ul.feedback li p { padding: 4px; color: #999; }
	.ballot-measures ul.feedback li span.helper { color: #333; font-size: 80%; font-style: italic; }
	.ballot-measures ul.feedback li span.remove { float: right; padding: 4px; }