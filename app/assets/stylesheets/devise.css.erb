.account img {
	width: 80px;
	float: left;
	border: 1px solid #556d1b;
	margin-right: 10px;
}
.account {
	color: #556d1b;
	margin: -12px 0 0 0;
	height: 120px;
	width: 206px;
	background: url(<%= asset_path 'account.png'%>) top left no-repeat;
	padding: 21px 10px;
}

.account a:link, .account a:visited, .account a:active {
	color: #556d1b;
	padding: 2px;
	text-align: left;
}
.account a:hover {
	color:#D37A3C;
}