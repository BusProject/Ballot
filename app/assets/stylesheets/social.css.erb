input[type=text].link:focus::after {
	position: absolute;
	content: 'copy me!';
	margin-left: -30px;
}

input[type=text].link {
	font-family: 'Rokkit', sans-serif;
	font-size: 10px;
	font-weight: normal;
	color: #747474;
	border-bottom: 0;
	border: none;
	width: 90%;
	padding: 2px 4px;
}

.icons {
	width: 182px;
	padding: 10px 0 0;
	margin: 0 auto 10px;
	box-sizing: border-box;
	-moz-box-sizing: border-box;
	display: block;
	clear: both;
	height: 30px;
}
.icons a {
	border: none;
	width: 56px;
	height: 26px;
	float: left;
	margin: 0 !important;
	padding: 0 !important;
}
.icons a div {
	border: 1px solid #426a84;
	width: 56px;
	height: 26px;
	float: left;
	margin: 0;
	padding: 0;

}
.fbook div { background: transparent url(<%= asset_path 'fbook.png'%>) center no-repeat; }
