	/* for W3C-compliant browsers */
	background-image: linear-gradient(top, rgba(134,163,201,255) 0%, rgba(104,140,186,255) 7%, rgba(75,117,171,255) 51%);
	/* for Safari 5.03+ and Chrome 7+ */
	background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0, rgba(134,163,201,255)), color-stop(0.0701388, rgba(104,140,186,255)), color-stop(0.50684151056548, rgba(75,117,171,255)));
	/* for Firefox 3.6+ */
	background-image: -moz-linear-gradient(top, rgba(134,163,201,255) 0%, rgba(104,140,186,255) 7%, rgba(75,117,171,255) 51%);
	/* for Opera 11.1+ */
	background-image: -o-linear-gradient(top, rgba(134,163,201,255) 0%, rgba(104,140,186,255) 7%, rgba(75,117,171,255) 51%);
	/* for IE */
	filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#86a3c9', endColorstr='#688cba'endColorstr='#4b75ab');

}
