input[type=text].link {
	font-family: 'Rokkit', sans-serif;
	font-size: 10px;
	font-weight: normal;
	color: #747474;
	border-bottom: 0;
	border: none;
	width: 168px;
	display: block;
	margin: 0 auto;
	padding: 2px 4px;
}

.icons {
	width: 180px;
	padding: 10px 0 0;
	margin: 0 auto 10px;
	box-sizing: border-box;
	-moz-box-sizing: border-box;
	display: block;
	clear: both;
	height: 30px;
}
.icons a {
	border: none;
	width: 45px;
	height: 26px;
	float: left;
	margin: 0 !important;
	padding: 0 !important;
}
.icons a div {
	width: 45px;
	height: 26px;
	float: left;
	margin: 0;
	padding: 0;
}
.icons a:hover div { background-color: rgba(0,0,0,.1); box-shadow: inset 0px 0px 2px #999 }

