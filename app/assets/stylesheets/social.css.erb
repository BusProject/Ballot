input[type=text].link {
	font-family: 'Open Sans', sans-serif;
	font-size: 12px;
	font-weight: normal;
	color: #5b5b5b;
	border-bottom: 0;
	background-color:#dadada;
	border: none;
	width: 80%;
	display: block;
	margin: 0 auto;
	padding: 2px 4px 2px 25px;
	border-radius: 3px;
	border:1px solid #5b5b5b;
}

#share-box {margin-top:10px;}

.icons {
	width: 100%;
	padding: 10px 0 0;
	margin: 0 auto 20px;
	box-sizing: border-box;
	-moz-box-sizing: border-box;
	display: block;
	clear: both;
	height: 30px;
}
.icons a {
	border: 1px solid #424242;
	width: 23%;
	height: 26px;
	float: left;
	margin: 0 !important;
	padding: 0 !important;
	box-shadow: rgba(255,255,255,0.2) 0 1px 0, inset rgba(255,255,255,0.2) 0 1px 0;
}
.icons a div {
	width: 100%;
	height: 26px;
	float: left;
	margin: 0 0 20px 0;
	padding: 0;
}

.icons a:hover div { background-color: rgba(0,0,0,.1); box-shadow: inset 0px 0px 2px #999 }

.fbook div { background: transparent url(<%= asset_path 'fbook.png'%>) center no-repeat; }
.twitter div { background: transparent url(<%= asset_path 'twitter.png'%>) center no-repeat; }
.tumblr div { background: transparent url(<%= asset_path 'tumblr.png'%>) center no-repeat; }
.googleplus div { background: transparent url(<%= asset_path 'googleplus.png'%>) center no-repeat; }

.fbook {
	background-color: #3c5d96;
	border-radius:3px 0 0 3px;
}

.twitter {background-color: #45b9f1;}

.tumblr {background-color: #3c5872;}

.googleplus {
	background-color: #b73425;
	border-radius: 0px 3px 3px 0;
}


