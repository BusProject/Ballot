@font-face {
  font-family: 'Rokkitt';
  font-style: normal;
  font-weight: normal;
  src: local('Rokkitt'), url(<%= asset_path 'type/RcB7dRNAX_8JE8zinU47YALUuEpTyoUstqEm5AMlJo4.woff'%>) format('woff');
}

#meme-tainer {
	display: none;
	position: fixed;
	width: 796px;
	z-index: 100;
	height: 640px;
	top: 120px;
	padding: 0;
	margin: 0 0 0 162px;
	overflow: hidden;
	box-sizing: border-box;
	-moz-box-sizing: border-box;
}
#meme-tainer .close {
	position: absolute;
	right: 6px;
	color: white;
	background: black;
	width: 26px;
	padding: 6px 0 4px;
	border-radius: 4px;
	font-family: Rokkitt, serif;
	top: 0;
	cursor: pointer;
	font-size: 14px;
}
#meme-tainer .close:hover {
	color: #222;
	background: #999;
}
#meme-tainer iframe {
	width: 788px;
	height: 640px;
	overflow: hidden;
}
#meme { 
	font-size: 12px;
	font-family: 'Rokkitt';
	background-color: #e5e5e5;
	font-family: Helvetica; 
	padding: 20px 30px;
	height: 520px;
	border: 4px solid green;
}
#meme.no {
	border-color: red;
}
#meme .choose {
	width: 380px;
}
#meme textarea { 
	font-family: 'Rokkitt';
	color: #8eb237;
	border: 2px solid rgba(0,0,0,.3);
	float: right;
	font-size: 14px;
	padding: 12px; 
	display: block;
	resize: none;
	width: 440px;
	background: #fff;
	height: 80px
}
#meme .matt::after, #meme .matt::before  { 
	content: ' ';
	position: absolute;
	border-color: transparent #f4bc94 transparent transparent;
	width: 0;
	margin-left: -73px;
	margin-top: -300px;
	border-width: 30px;
	border-style: solid;
}
#meme .matt::before { 
	border-color: transparent rgba(0,0,0,.3) transparent transparent;
	margin-left: -74px;
	margin-top: 20px;
}
#meme .matt { 
	border: 14px solid #f4bc94;
	float: right;
	box-shadow: 0px 0px 4px #000;
}

#meme .preview { 
	background-size: cover; 
	font-size: 22px;
	width: 320px;
	height: 320px;
	padding: 0;
	color: white;
	text-shadow: 5px 2px 3px #000;
	clear: both;
	box-shadow: 0px 0px 6px #ccc;
}
#meme .preview-load {
	position: absolute;
}
#meme .preview img {
	width: 320px;
	height: 320px;
}
#meme h2 {
	font-family: Rokkitt, serif;
	font-size: 24px;
	color: #8eb237;
	font-weight: normal;
	margin-right: 200px;
	margin: 20px 0 4px;
}
#meme strong { font-weight: bold;}
#meme h1 {
	font-family: Rokkitt, serif;
	font-size: 50px;
	color: #8eb237;
	font-weight: normal;
	margin: 0 0 30px;
	text-align: center
}
#meme .pick  { 
	width: 240px
}
#meme .pick div:nth-child(5) {
	position: absolute;
	left: 250px
}
#meme .pick div { 
	width:90px; 
	margin: 0 8px 8px 0; 
	float: left; 
	height: 90px; 
	background-size: cover; 
	border: 2px solid #777; 
	cursor: pointer
}
#meme .pick div:hover { opacity: 0.7 }
#meme .selected { border-color: red !important }
#meme .icon { 
	width: 30px;
	height: 30px;
	float: left;
	border: 2px solid #ddd
}
#meme .share {
	clear: left;
	width: 170px;
	height: 140px;
	margin-bottom: 30px;
	float: left;
}
