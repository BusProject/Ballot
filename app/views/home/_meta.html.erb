
<% title = @title || 'The Ballot - Your Social Voting Guide' %>
<% message = @message || 'TheBallot.org is the 100% social voter guide brought to you by the League of Young Voters, New Era Colorado, Forward Montana, and the Bus Project.' %>
<% image = @image || ENV['BASE']+asset_path('ballot.jpg') %>
<% url = @url || "#{request.protocol}#{request.host_with_port}#{request.fullpath}" %>
<% photo = photo || nil %>
<% type = @type || 'website' %>


<link rel="image_src" href="<% image %>" />


<meta property="og:image" content="<%= image %>" />
<meta property="og:title" content="<%= title %>" />
<meta property="og:url" content="<%= url %>">
<meta property="og:description" content="<%= message %>">
<meta property="og:site_name" content="The Ballot">
<meta property="fb:app_id" content="<%= ENV['FACEBOOK'] %>">
<meta property="og:type" content="<%= type %>" />
<%- if @geography %>
	<meta property="the_ballot:geography" content="<%= @geography %>" />
<% end %>
<%- if @voter_guide_reference %>
	<meta property="the-ballot:voter_guide" content="<%= @voter_guide_reference %>" >
<% end %>

<% if photo.nil? %>
	<meta name="twitter:card" content="summary">
<% else %>
	<meta name="twitter:card" content="photo">
	<meta name="twitter:image:width" content="500">
	<meta name="twitter:image:height" content="500">
<% end %>

	<meta name="twitter:site" content="@theleague99">
	<meta name="twitter:url" content="<%= url %>">
	<meta name="twitter:title" content="<%= title %>">
	<meta name="twitter:description" content="<%= message %>">
	<meta name="twitter:image" content="<%= image %>">