<% iframe = params[:iframe].to_i - 16  %>
<style type="text/css" media="screen">
	<% if iframe  > 700 %>
		body.home { background: none }
		body, #container, #page, #footer {
			max-width: <%= iframe  %>px;
			min-width: <%= iframe  %>px;
			width: <%= iframe  %>px;
			margin: 0;
			background-color: transparent !important;
		}
		#find-ballot #enter-address .find-ballot { width: <%= iframe  * 520/960 %>px; margin-bottom: 20px; }
		#main {
			width: <%= iframe - 180 %>px;
			margin: -20px 0 0 160px;
		}
		.ballot-section {
			width: <%= iframe - 190 %>px;
		}
		#read-ballot .row, .ballot-section .category-heading, #footer { width: <%= iframe - 280 %>px; }

		#footer { padding-left: 220px; }
		#instructions-box { margin-left: -8px}
	<% else %>
		#instructions-box { display: none }
		body.home { background: none }
		body, #container, #page, #footer {
			max-width: <%= iframe  %>px;
			min-width: <%= iframe  %>px;
			width: <%= iframe  %>px;
			margin: 0;
			background-color: transparent !important;
		}
		#find-ballot #enter-address .find-ballot { width: <%= iframe  * 520/960 %>px; margin-bottom: 20px; }
		#main {
			width: <%= iframe - 20 %>px;
			margin: -20px 0 0 -2px;
		}
		.ballot-section, #find-ballot #map img {
			width: <%= iframe - 20 %>px;
		}
		#read-ballot .row, .ballot-section .category-heading, #footer { width: <%= iframe  - 20 %>px; }
	<% end %>
	#header { margin: 0 0 14px; }
	.account, #header, #more-coming .category-heading, .remember, .top-guides, .yourFeedback { display: none !important }
	#find-ballot #map img.located { float:none }
	#container { padding-top: 0; }
	#page { border: none }
	#instructions-box.top { top: 150px; }
	
</style>