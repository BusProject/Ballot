<script type="text/javascript" src='http://maps.googleapis.com/maps/api/js?sensor=true'></script>

	<div id="find-ballot" class="ballot-section">
			<h1 class="sectionheading">Look Up What’s On Your Ballot</h1>

		<div id="enter-address">
		
			<div>
				<input onkeypress="$('.place-holder').hide()" data-bind="value: address" spellcheck="false" type="text" class="find-ballot" placeholder="enter your address here">
				<!--[if IE]><label onclick="$('.find-ballot').focus()" unselectable="on" class="place-holder" style="display: none;" data-bind="visible: address() != null && address().length == 0">enter your address here</label><![endif]-->
				<a href="#" class="cancel find-ballot-submit">Submit</a>
			</div>
			<span class="remember link" onclick="$(this).toggleClass('on')" >Save as home address</span>
		
		</div><!-- enter address -->
			
		<div id="map"  >
			<img data-bind="attr: { 'src' : map }, css: { located: geolocated() }">
			<div class="top-guides" data-bind=" visible: geolocated() ">
				<h3>Voter Guides Near You</h3>
				<ol data-bind="foreach:guides">
					<li>
						<a data-bind="attr:{href: profile}, text: guide_name || name+'\'s Voter Guide' "></a>
					</li>
				</ol>
				<em data-bind="visible: guides().length < 0">Loading...</em>
			</div>
			<div style="display:none;" class="confirmation" >
				Is this right?<br />
				<a href="#read-ballot" class="fixed-link confirm">Yes</a><a href="" class="cancel clear">No</a>
			</div>
		</div><!-- map -->

	</div><!-- find-ballot -->

	
	<div id="read-ballot"  style="display:none;" class="ballot-section" data-bind="visible: choices.notEmpty()">
		<h1 class="sectionheading">Here’s What Will Be On Your Ballot</h1>


		<!-- ko foreach: sections -->
			<div data-bind="visible: $data.visible, attr: {'class' : $data.className, 'id': $data.title.replace(/ /g,'_') }">
				<div class="category-heading" >
					<h2 data-bind="text: title"></h2>
					<p data-bind="text: description"></p>
				</div>
				<div class="candidates" data-bind="template: { name: $data.template, foreach: $data.contests }"></div>
			</div>
		<!-- /ko -->
		
	</div><!-- read-ballot -->
	<h1 class="sectionheading" style="display:none; clear: both;" data-bind="visible: !fetch() ">Loading...</h1>
	<div id="more-coming" style="display:none;" class="ballot-section" data-bind="visible: geolocated() && fetch()" >
		<h1>More to Come...</h1>
		<div class="category-heading minor">
			<p>This isn't your full ballot - we're still adding data <span data-bind="text: address.state() ? ' for '+yourLocation.constructor.prototype.states[ yourLocation.constructor.prototype.abvs.indexOf( address.state() ) ]  : '' "></span>.</p>
			<br />
			<%- if current_user.nil? %>
				<p>Log in through Facebook to get an email when we've added more.</p>
				<br />
				<a href="" data-bind="attr: {href:  '<%= omniauth_authorize_path('user', :facebook) %>?state='+address.state() }">
					<%= image_tag 'fb-login.png', :style => 'width:120px'  %>
				</a>
			<% else %>
				<button style="display:none;" class="alerts" 
					data-bind="visible: (current_user.alerts == null ? '' : current_user.alerts).search( address.state() ) === -1"
					onclick="$(this).hide().next().show(); current_user.alerts += yourLocation.address.state()+','; $.post(inits.root+'users/update',{alerts: yourLocation.address.state() } ); ">Update Me When There's More Data</button>
				<strong style="display:none;" data-bind="visible: current_user.alerts != null && current_user.alerts.search( address.state() ) !== -1 ">You'll get an email when there's more data</strong>
				<p style="margin-top: 20px;">Is Something Missing?</p>
				<a class="add_more" href="<%= user_add_choice_path('candidate') %>"><button >Create a new candidate</button></a>
				<a class="add_more" href="<%= user_add_choice_path('measure') %>"><button >Create a new Ballot Measure</button></a>
			<% end -%>
		</div>
	</div>


<script id="measure" type="text/html">
	<%=  render 'choice/measure/front' %>
</script>
<script id="candidate" type="text/html">
	<%=  render 'choice/candidate/front' %>
</script>