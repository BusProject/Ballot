			<div class="ballot-category clearfix" role="federal races">
				<h2 class="category-heading">Federal Races</h2>
				<div class="race-menu">
					<ul>
						<li>President</li>
						<li>Senate</li>
						<li>Congress</li>
					</ul>
				</div><!-- race-menu -->
				<div class="candidates">
					<div class="candidate-row">
						<img class="candidate-photo">
						<img class="candidate-photo">
						<span class="candidate-info">Barack Obama and Joe Biden</span>
					</div><!-- candidate-row -->
				</div><!-- candidates-->
			</div><!-- ballot-category -->
			
			<div class="ballot-category clearfix" role="ballot measures">
				<h2 class="category-heading ballot-measure">Ballot Measures</h2>
				<div class="race-menu ballot-measure-box">
					<ul>
						<li>President</li>
						<li>Senate</li>
						<li>Congress</li>
					</ul>
				</div><!-- race-menu -->
				<div class="ballot-measure-expanded">
