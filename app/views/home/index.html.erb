<div id="page">
	<div id="header" class="clearfix">
		<img src="<%= asset_path 'theballotlogo.gif' %>" id="logo">
		<div id="tagline">GET A SNEAK PEEK AT YOUR BALLOT FOR THE UPCOMING ELECTION</div> <!-- tagline -->			
		</div> <!-- header -->
		
	<div id="instructions-box">
		<div id="instructions">
		<ul>
			<li><a href="#1">1. Find Your Ballot</a></li>
			<li><a href="#2">2. Read Your Ballot</a></li>
			<li><a href="#3">3. Share Your Ballot</a></li>
		</ul>
		</div><!-- instructions -->
	</div><!-- instructions-box -->
	
	<div id="main">
		<div id="find-ballot" class="ballot-section">
			<h1 class="sectionheading"> <span class="stars">&#9733; &#9733; &#9733;</span><a name="1"> Where Do You Vote?</a> <span class="stars">&#9733; &#9733; &#9733;</span></h1>
			<div id="enter-address">
			
				<div class="pointer">
					<img class="pointer-image" src="<%= asset_path 'pointer-full.gif' %>">
					<span class="pointer-text">Where You're Voting</span>
					<div class="pointer-arrow"> &nbsp </div>
				</div><!-- pointer -->
				<input id="address-input" type="text" placeholder="enter your address"></input>
				</div><!-- enter address -->
				
			<div id="map">
				<div class="pointer">
					<img class="pointer-image" src="<%= asset_path 'pointer-full.gif' %>">
					<span class="pointer-text">Look familiar?</span>
					<div class="pointer-arrow"> &nbsp </div>
				</div><!-- pointer -->
				
				<div id="map-embed">
					<iframe width="425" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=Portland,+OR&amp;aq=0&amp;oq=portland&amp;sll=45.523452,-122.676207&amp;sspn=0.744703,1.241455&amp;ie=UTF8&amp;hq=&amp;hnear=Portland,+Multnomah,+Oregon&amp;t=m&amp;ll=45.554929,-122.749557&amp;spn=0.168282,0.291824&amp;z=11&amp;iwloc=A&amp;output=embed"></iframe>
				</div> <!-- map embed -->

			</div><!-- map -->
			
			<div id="address-submit">
				<button>Show My Ballot</button>
			</div><!-- address-submit -->	
				
			
			
	
		</div><!-- find-ballot -->
	
	
	
	
	
	
		<div role="read-ballot" class="ballot-section">
