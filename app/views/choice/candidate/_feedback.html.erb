<% user = user || current_user  %>
<% userObj = user == current_user ? 'you()' : 'featured()'  %>

<% @how = '<h2>'+t('candidates.who')+'</h2>
<p>'+t('candidates.let')+' <span data-bind="text: $data.contest"></span>. '+t('candidates.can_share')+'</p>' %>


<div class="yourFeedback <%= user.nil?  ? 'no-user' : 'has_user' %>" data-bind="visible: <%= userObj %> != null, if: <%= userObj %> != null ">
	<h1 data-bind="text: [$data.<%= userObj %>.option_name,'for',$data.contest].join(' ') " >
		<%= [feedback.option.name,'for',feedback.choice.contest].join(' ')  unless feedback.nil? %>
	</h1>
	<span data-bind="text: '&ldquo;'+<%= userObj %>.comment+'&rdquo;', visible: <%= userObj %>.comment != null && <%= userObj %>.comment.length > 0,addClass: <%= userObj %>.type" >
		<%- if !feedback.nil? && !feedback.comment.nil? && feedback.comment.length > 0 %>
			<%= '"'+feedback.comment+'"' %>
		<% end -%>
	</span>
	<div class="head" data-bind="addClass: <%= userObj %>.type, visible:<%= userObj %>.comment != null && <%= userObj %>.comment.length < 1 ">
		<img data-bind="src: <%= userObj %>.image" src="<%= user.image unless user.nil? %>">
	</div>
	<h3 class="comment-details" data-bind="text: '- '+<%= userObj %>.name+( <%= userObj %>.comment != null && <%= userObj %>.comment.length > 1 ? ' '+<%= userObj %>.time : '' ), addClass: <%= userObj %>.type">
		<%= '-'+user.first_name+' '+user.last_name unless user.nil? %>
	</h3>
	<%- if user == current_user %>
		<div class="controls">
			<button class="meme"><%= t('site.badge' ) %></button>
			<button class="next"><%= t('candidates.next') %></button>
			<span class="remove edit link"  ><%= t('site.edit') %></span>
				<span >&nbsp;|&nbsp;</span>
			<span class="remove link" ><%= t('site.remove') %></span>
		</div>
	<% end -%>
</div>


<%- if !current_user.nil? && true && current_user == user %>
	<div class="yourFeedback candidate" data-bind="visible: ! you() ">
		<%= raw @how %>
		<select class="chosen" data-bind="value: $data.chosen, options: options, optionsCaption:'[ '+I18n.t( 'candidates.prompt') +' ]', optionsText: 'name'"></select><div class="arrows">&#x25B2;<br />&#x25BC;</div>
		
		<textarea type="text" class="comment" data-bind="elastic: true" placeholder='<%= t('candidates.comment') %>' /></textarea>
		<div class="buttons">
			<button class="submit" data-bind="attr: { disabled: chosen() == null }"><%= t('site.submit' )%></button>
		</div>
	</div>
<% end %>


<%- if current_user.nil? && current_user == user %>
	<div class="yourFeedback login">
		<%= raw @how %>
		<p><%= t('site.login') %></p>
		<%= link_to (image_tag 'fb-login.png'), omniauth_authorize_path('user', :facebook)  %>
	</div>
<% end -%>
