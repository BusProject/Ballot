<% user = user || current_user  %>
<% userObj = user == current_user ? 'you()' : 'featured()'  %>

<% @how = '<h2>How will you vote on this measure?</h2>
<p>Let the world know how youâ€™re voting on <span data-bind="text: $data.contest"></span>. Your comment will be posted here and you can easily share it on other sites like Facebook, Tumblr, and Pinterest.</p>' %>


<div class="yourFeedback <%= user.nil?  ? 'no-user' : 'has_user' %>" data-bind="visible: <%= userObj %> != null, if: <%= userObj %> != null ">
	<h1 class="<%= feedback.option.type unless feedback.nil? %>" data-bind="text: '&ldquo;'+<%= userObj %>.comment+'&rdquo;', visible: <%= userObj %>.comment.length > 0,addClass: <%= userObj %>.type" >
		<%- unless feedback.nil? %>
			<%- if !feedback.comment.nil? && feedback.comment.length > 0 %>
				<%= '"'+feedback.comment+'"'  %><br /><br/>
			<% end -%>
			<%= feedback.option.name+' on '+feedback.choice.contest %>
		<% end -%>
	</h1>
	<div class="head" data-bind="addClass: <%= userObj %>.type, visible: <%= userObj %>.comment.length < 1 ">
		<img data-bind="src: <%= userObj %>.image" src="<%= user.image unless user.nil? %>">
	</div>
	<h3 class="comment-details <%= feedback.option.type unless feedback.nil? %>" data-bind="text: '-'+<%= userObj %>.name+( <%= userObj %>.comment.length > 1 ? ' '+<%= userObj %>.time : '' ), addClass: <%= userObj %>.type">
		<%= '-'+user.first_name+' '+user.last_name unless user.nil? %>
	</h3>
	<%- if user == current_user %>
		<div class="controls">
			<button class="meme">Share Your Comment</button>
			<button class="next" >Next Measure</button>
			<span class="remove edit link"  >Edit</span>
				<span >&nbsp;|&nbsp;</span>
			<span class="remove link" >Remove</span>
		</div>
	<% end -%>
</div>


<%- if !current_user.nil? && current_user == user %>
	<div class="yourFeedback" data-bind="visible:  you() == null ">
		<%= raw @how %>
		<div class="toggle" data-bind="addClass: $data.you() != null && $data.you().type == 'no' ? 'right' : '' ">
			<div class="inner">
				<div class="yes">I'm Voting Yes</div>
				<div class="no">I'm Voting No</div>
			</div>
			<div class="cover">|||</div>
		</div>
		<textarea type="text" class="comment" data-bind="elastic: true" placeholder='What do you think?' /></textarea>

		<div class="buttons">
			<button class="submit">Submit</button>
		</div>
	</div>
<% end %>


<%- if current_user.nil? && current_user == user %>
	<div class="yourFeedback login">
		<%= raw @how %>
		<p>You must be logged in through Facebook to use this feature</p>
		<%= link_to (image_tag 'fb-login.png'), omniauth_authorize_path('user', :facebook)  %>
	</div>
<% end -%>
