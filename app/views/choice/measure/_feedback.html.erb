<% user = user || current_user  %>
<% userObj = user == current_user ? 'you()' : 'featured()'  %>

<% @how = '<h2>'+t('measures.how')+'</h2>
<p>'+t('measures.let') +' <span data-bind="text: $data.contest"></span>. '+t('measures.can_share')+'</p>' %>


<div class="yourFeedback <%= user.nil?  ? 'no-user' : 'has_user' %>" data-bind="visible: <%= userObj %> != null, if: <%= userObj %> != null ">
	<span class="<%= feedback.option.type unless feedback.nil? %>" data-bind="text: '&ldquo;'+<%= userObj %>.comment+'&rdquo;', visible: <%= userObj %>.comment.length > 0,addClass: ( <%= userObj %>.type == I18n.t('site.no').toLowerCase() ? 'no' : 'yes' )" >
		<%- unless feedback.nil? %>
			<%- if !feedback.comment.nil? && feedback.comment.length > 0 %>
				<%= '"'+feedback.comment+'"'  %><br /><br/>
			<% end -%>
			<%= feedback.option.name+' on '+feedback.choice.contest %>
		<% end -%>
	</span>
	<div class="head" data-bind="addClass: ( <%= userObj %>.type == I18n.t('site.no').toLowerCase() ? 'no' : 'yes' ), visible: <%= userObj %>.comment.length < 1 ">
		<img data-bind="src: <%= userObj %>.image" src="<%= user.image unless user.nil? %>">
	</div>
	<h3 class="comment-details <%= feedback.option.type unless feedback.nil? %>" data-bind="text: '-'+<%= userObj %>.name+( <%= userObj %>.comment.length > 1 ? ' '+<%= userObj %>.time : '' ), addClass: <%= userObj %>.type">
		<%= '-'+user.first_name+' '+user.last_name unless user.nil? %>
	</h3>
	<%- if user == current_user %>
		<div class="controls">
			<button class="meme"><%= t('site.badge' ) %></button>
			<button class="next"><%= t('candidates.next') %></button>
			<span class="remove edit link"  ><%= t('site.edit') %></span>
				<span >&nbsp;|&nbsp;</span>
			<span class="remove link" ><%= t('site.remove') %></span>
		</div>
	<% end -%>
</div>


<%- if !current_user.nil? && current_user == user %>
	<div class="yourFeedback" data-bind="visible:  you() == null ">
		<%= raw @how %>
		<div class="toggle" data-bind="addClass: $data.you() != null && $data.you().type == I18n.t('site.no').toLowerCase() ? 'right' : '' ">
			<div class="inner">
				<div class="yes"><%= t('measures.yes')%></div>
				<div class="no"><%= t('measures.no')%></div>
			</div>
			<div class="cover">|||</div>
		</div>
		<textarea type="text" class="comment" data-bind="elastic: true" placeholder='<%= t('candidates.comment') %>' /></textarea>

		<div class="buttons">
			<button class="submit"><%= t('site.submit')%></button>
		</div>
	</div>
<% end %>


<%- if current_user.nil? && current_user == user %>
	<div class="yourFeedback login">
		<%= raw @how %>
		<p>You must be logged in through Facebook to use this feature</p>
		<%= link_to (image_tag 'fb-login.png'), omniauth_authorize_path('user', :facebook)  %>
	</div>
<% end -%>
