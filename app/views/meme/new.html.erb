<%= javascript_include_tag "knockout-latest.debug.js" %>
<%= javascript_include_tag "jquery" %>
<%= javascript_include_tag "jquery_ujs" %>
<script src="http://connect.facebook.net/en_US/all.js"></script>


<%= csrf_meta_tags %>
<script type="text/javascript" charset="utf-8">
	var current_user  = <%= raw current_user.to_public %>
</script>

<div style="width: 800px">
	<%= render :partial => 'form' %>
</div>
<div id="fb-root"></div>
<script type="text/javascript" charset="utf-8">
	FB.__appid = <%= ENV['FACEBOOK'] %>;
	FB.init({
		appId: FB.__appid,
		cookie: true,
		xfbml: true,
		oauth: true
	});
	setTimeout(function() { current_user.auth_token = FB.getAccessToken(); },1000)
</script>
