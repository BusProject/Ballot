<% if current_user.nil? %>
  <div class="login">
    <%= form_tag(user_forgot_password_path, method: 'post') do %>
      <h1><%= t('user.forgot_password') %></h1><br>
      <%= t('user.forgot_password_blurb') %><br><br>
      <%= text_field_tag(:email) %><br>
      <%= submit_tag(t('user.forgot_password_button')) %>
    <% end %>
  </div>
<% end %>
