	var current_user = <%= raw current_user.to_json %> || {id: 'unauthenticated'},
		inits = <%= raw @config || '{}' %>

	current_user.url = "<%= current_user.nil? ? root_path : profile_path( current_user.to_url )  %>"
	inits.root = "<%= root_path %>"
  </script>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta property="og:image" content="<%= asset_path 'share.png'%>" />
  <meta property="og:title" content="<%= title %>" />
