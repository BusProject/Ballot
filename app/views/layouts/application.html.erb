<body class="no-script <%= current_user.nil? ? 'not_logged_in' : 'logged_in' %> <%= !current_user.nil? && current_user.commentable? ? '' : 'no_comment' %> <%= @classes %>" >
    <!--[if lt IE 7]>
        <p class="chromeframe">You are using an outdated browser. <a href="http://browsehappy.com/">Upgrade your browser today</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to better experience this site.</p>
    <![endif]-->
	<%=  render 'devise/account' %>

	<div id="container">
		<div id="page">

			<div id="header" class="clearfix">
				<%- if !@user.nil? && !@user.header.nil? && @user.header.url(:header) != '/headers/header/missing.png' %>
					<%= link_to image_tag( @user.header.url(:header) ), root_path, :id => 'logo' %>
				<% else %>
					<%= link_to image_tag( asset_path( 'logo.jpg' ) ), root_path, :id => 'logo' %>
				<% end %>
			</div> <!-- header -->

			
			<div id="instructions-box" style="display:none;" data-bind="css: { top: top() < 140 }, visible: true" >
				<div id="instructions" data-bind="visible: menuItems.length > 0 ">
				<img src="<%= asset_path 'menutop.png' %>" class="menutop">
					<ul data-bind="foreach: menuItems">
						<li data-bind="overwrite: $data.html ">
							<a class="main" data-bind="css: { active: false }, text: $data.name, attr: {href: $data.id }"></a>
							<div style="display:none;" data-bind="slide: $parent.active() == $data.id " class="menu-inner">
								<div class="arrow"></div>
								<div data-bind="html: $data.description, bindDescendents: $data.model "></div>
							</div>
						</li>
					</ul>
				</div><!-- instructions -->
			</div><!-- instructions-box -->
			<div id="main">
				<%= yield %>
			</div><!-- main -->

		</div><!-- page -->

		<div id="footer">
			<hr />
			<p style="margin: 10px 0 0;"><strong>BALLOTS BY STATE</strong></p>
			<% @states = Choice.states %>
			<% @states.shift %>
			<% @statesAbvs = Choice.stateAbvs %>
			<% n = 1 %>

			<% @states.each do |state| %>
				<a href="<%= ENV['BASE']+'/'+@statesAbvs[n] %>" class="state <%= 'active' if @state == state %>"><%= state %></a>
				<% n += 1 %>
			<% end %>
			<p style="font-size: 9px; margin-top: 20px;">
				<p>TheBallot.org is brought to you by the <a href="http://theleague.com" target='_blank'>League of Young Voters</a>, <a href="http://neweracolorado.org" target='_blank'>New Era Colorado</a>, <a href="http://forwardmontana.org" target='_blank'>Forward Montana</a>, and the <a href="http://busproject.org" target='_blank'>Bus Project</a>.</p>
				<%= link_to 'Terms of Service', terms_path %>
				|&nbsp;&nbsp;
				<%= link_to 'Privacy Policy', privacy_path %>&nbsp;
			</p>
		</div><!-- footer -->
		<div id="meme-cova"></div>
		<div id="meme-tainer">
			<iframe scrolling="no"></iframe>
			<div class="close"><i class="icon-remove-sign"></i></div>
		</div>
		<div id="fb-root"></div>
		<script src="http://connect.facebook.net/en_US/all.js"></script>
		<script>
			FB.__appid = <%= ENV['FACEBOOK'] %>;
			FB.init({
				appId: FB.__appid,
				cookie: true,
				xfbml: true,
				oauth: true
			});
		</script>
		<%= render :partial => 'home/ga' %>
	</div>
