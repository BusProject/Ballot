<body class="no-script <%= current_user.nil? ? 'not_logged_in' : 'logged_in' %> <%= @classes %>" >

	<div id="container">
		<div id="page">
			<div id="header" class="clearfix">
				<%= link_to image_tag( asset_path( 'theballot.png' ), :id => 'logo' ), root_path %>
			</div> <!-- header -->

			<div id="instructions-box" data-bind="css: { top: top() < 70 }" >
				<%=  render 'devise/account' %>
				<div id="instructions" data-bind="visible: menuItems.length > 0 ">
				<img src="<%= asset_path 'menutop.png' %>" class="menutop">
					<ul data-bind="foreach: menuItems">
						<li data-bind="overwrite: $data.html ">
							<a data-bind="css: { active: false }, text: ( inits.state ? '' : ($index()+1) )+' '+$data.name, attr: {href: $data.id }"></a>
							<div style="display:none;" data-bind="slide: $parent.active() == $data.id " class="menu-inner">
								<div class="arrow"></div>
								<div data-bind="html: $data.description"></div>
							</div>
						</li>
					</ul>
				</div><!-- instructions -->
			</div><!-- instructions-box -->

			<div id="main">
				<%= yield %>
			</div><!-- main -->

		</div><!-- page -->

		<div id="footer"></div><!-- footer -->
		<div id="meme-tainer"></div>
		<div id="fb-root"></div>
		<script src="http://connect.facebook.net/en_US/all.js"></script>
		<script>
			FB.__appid = <%= ENV['FACEBOOK'] %>;
			FB.init({
				appId: FB.__appid,
				cookie: true,
				xfbml: true,
				oauth: true
			});
		</script>
	</div>
</body>
</html>
